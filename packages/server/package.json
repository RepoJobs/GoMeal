{
  "name": "server",
  "version": "0.0.1",
  "description": "API",
  "author": "gabrieldev525 <gvictor525.gv@gmail.com>",
  "homepage": "https://github.com/RepoJobs/GoMeal#readme",
  "license": "ISC",
  "scripts": {
    "test:setup": "npm run tsc -- --noEmit && npm run docker:test:up && npx dotenv-cli -e .env.test -- npm run prisma:migrate:deploy",
    "test": "npm run tsc -- --noEmit && npm run docker:test:up && npx dotenv-cli -e .env.test -- npm run prisma:migrate:deploy && jest --runInBand --verbose --forceExit  || :",
    "test:integration": "npm run tsc -- --noEmit && npm run docker:test:up && npx dotenv-cli -e .env.test -- npm run prisma:migrate:deploy && jest --runInBand --verbose || :",
    "test:unit": "npm run tsc -- --noEmit && npm run docker:test:up && npx dotenv-cli -e .env.test -- npm run prisma:migrate:deploy && jest --runInBand --verbose --testPathIgnorePatterns=src/tests/integration || :",
    "test:watch": "npm run tsc -- --noEmit && npm run docker:test:up && npx dotenv-cli -e .env.test -- npm run prisma:migrate:deploy && jest --runInBand --verbose --watchAll || :",
    "posttest": "npm run docker:test:down",
    "dev": "npm run docker:dev:up && nodemon src/server.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "start": "npm run build && node dist/server.js",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:fix": "eslint . --ext .ts --fix && npx prettier --write .",
    "lint:eslint": "eslint . --ext .ts",
    "lint:prettier": "npx prettier --check .",
    "tsc": "tsc",
    "docker:dev:up": "docker compose --file ./docker/docker-compose.yml up -d",
    "docker:dev:down": "docker compose --file ./docker/docker-compose.yml down",
    "docker:test:up": "docker compose --file ./docker/docker-compose.test.yml up -d --force-recreate",
    "docker:test:down": "docker compose --file ./docker/docker-compose.test.yml down",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate",
    "prisma:migration-reset": "npx prisma migrate reset --force",
    "prisma:studio": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "@types/crypto-js": "^4.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "module-alias": "^2.2.2",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.3",
    "@swc/core": "^1.2.215",
    "@swc/jest": "^0.2.21",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.3",
    "@types/module-alias": "^2.0.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "concurrently": "^7.5.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-mock-extended": "^3.0.1",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1",
    "prisma": "^4.1.0",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.2"
  },
  "prisma": {
    "schema": "src/infra/db/prisma/schema.prisma"
  }
}
